<% @posts.each do |post| %>
  <article>
    <header>
      <h2><%= post.title %></h2>
      <small>Written by <%= post.user.name %> <%= distance_of_time_in_words(Time.now - post.created_at) %> ago</small> 
    </header>

    <p><%= markdown(post.body.truncate(600)) %> <%= link_to "Read more", post_path(post) %></p>
  </article>
<% end %>